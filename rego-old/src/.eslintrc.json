{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"eslint-config-google"
	],
	"parser": "babel-eslint",
	"plugins": [
		"react"
	],
	"settings": {
		"react": {
			"createClass": "createReactClass",
			"pragma": "React",
			"version": "16.6.3",
			"flowVersion": "0.53"
		},
		"propWrapperFunctions": [
			"forbidExtraProps",
			{"property": "freeze", "object": "Object"},
			{"property": "myFavoriteWrapper"}
		]
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"double"
		],
		"semi": [
			"error",
			"always"
		],
		"react/jsx-max-props-per-line": ["error", { "maximum": 1, "when": "always" }],
		"no-tabs": ["off"],
		"require-jsdoc": ["off"],
		"no-unused-vars": ["error"],
		"max-len": ["warn"],
		"react/prop-types": ["warn"]
	}
}